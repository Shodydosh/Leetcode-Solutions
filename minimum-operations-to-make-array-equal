class Solution {
public:
    int minOperations(int n) {
        // 1 3 5 7 9 11
        
        int ans = 0;
        if(n % 2){
            for(int i=1; i<=n/2; i++){
                ans += 2*i;
            }
        }
        else{
            // chia háº¿t cho 2
            for(int i=0; i< n/2; i++){
                ans += 2*i + 1;
            }
        }
        
        return ans;
    }
};
